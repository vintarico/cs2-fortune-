# ===================================
# CS2 FORTUNE - PRODUÇÃO (PostgreSQL)
# ===================================

# DATABASE (PostgreSQL)
DATABASE_PROVIDER="postgresql"
DATABASE_URL="postgresql://user:password@host:5432/cs2fortune?schema=public"

# JWT SECRET (MUDE ESTE VALOR!)
JWT_SECRET="GERE-UM-SECRET-FORTE-USANDO-openssl-rand-base64-32"

# OPENAI API
OPENAI_API_KEY="sk-proj-SEU-KEY-AQUI"
OPENAI_ORG_ID="org-SEU-ORG-ID"

# FEATURE FLAGS
GPT5_ENABLED="false"
GPT4_ENABLED="true"
GPT35_ENABLED="true"

# RATE LIMITING
AI_RATE_LIMIT_MAX="20"
AI_RATE_LIMIT_WINDOW_MS="60000"

# STEAM API
STEAM_API_KEY="SEU-STEAM-API-KEY"
STEAM_RETURN_URL="https://seu-dominio.com/api/login/steam/return"
STEAM_REALM="https://seu-dominio.com"

# CORS
CORS_ORIGIN="https://seu-frontend.vercel.app"

# SERVER
PORT="3001"
NODE_ENV="production"

# QUOTAS
QUOTA_FREE="5000"
QUOTA_PREMIUM="50000"
QUOTA_VIP="200000"
QUOTA_ADMIN="999999"

# MONITORING
SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"
LOG_LEVEL="warn"
